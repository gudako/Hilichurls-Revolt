{
  "$id": "https://example.com/address.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "type": "object",

  "properties": {
    "max_battle_id": {
      "type": "integer",
      "minimum": 0
    },
    "battlers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "battle_id": {
            "type": "integer",
            "minimum": 0,
            "description": "The unique identifier of a battler in this battlefield."
          },
          "playable_id": {
            "type": "integer",
            "minimum": -1,
            "description": "The ID of the character in the player's character list (min is 0). A value of -1 represents the character is an enemy."
          },
          "character_name": {
            "type": "string",
            "description": "For example, 'ganyu' is a valid character name."
          },
          "max_hp": {
            "type": "integer",
            "minimum": 0
          },
          "hp": {
            "type": "integer",
            "minimum": 0
          },
          "atk": {
            "type": "integer",
            "minimum": 0
          },
          "def": {
            "type": "integer",
            "minimum": 0
          },
          "crit_rate": {
            "type": "number"
          },
          "crit_dmg": {
            "type": "number"
          },
          "elements": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "element": {
                  "type": "string",
                  "enum": ["cryo", "dendro", "electro", "hydro", "pyro"]
                },
                "strength": {
                  "type": "number"
                }
              }
            }
          },
          "status": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "stat": {
                  "type": "string"
                },
                "time_remain": {
                  "type": "number"
                },
                "data": {
                  "description": "Can be undefined or anything."
                }
              }
            }
          }
        }
      }
    }
  }
}